{
    "name": "mako",
    "version": "0.0.2",
    "author": "Alex Barnier <alexjbarnier@gmail.com>",
    "description": "Cross-Platform Comicbook Reader Made in Electron",
    "main": "index.js",
    "repository": "https://github.com/LordDeimos/Mako/",
    "license": "MIT",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "Mako",
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "linux": {
            "category":"Viewer",
            "target": [
                "deb",
                "tar.gz"
            ],
            "icon": "build/icon.png"
        }
    },
    "engines": {
        "node": ">=8"
    },
    "dependencies": {
        "bulma": "^0.6.2",
        "bulma-extensions": "^0.7.0",
        "node-stream-zip": "^1.4.2"
    },
    "devDependencies": {
        "devtron": "^1.4.0",
        "electron": "^1.7.10",
        "electron-builder": "^19.54.0"
    }
}

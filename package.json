{
    "name": "mako",
    "version": "0.1.0",
    "author": "Alex Barnier <alexjbarnier@gmail.com>",
    "description": "Cross-Platform Comicbook Reader Made in Electron",
    "main": "index.js",
    "repository": "https://github.com/LordDeimos/Mako/",
    "license": "MIT",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "org.lorddeimos.mako",
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "linux": {
            "category": "Viewer",
            "target": [
                "deb",
                "tar.gz"
            ],
            "icon": "build/icon.png"
        }
    },
    "engines": {
        "node": ">=8"
    },
    "dependencies": {
        "archive-manager": "^1.0.0",
        "jquery": "^3.3.1",
        "vue": "^2.5.13"
    },
    "devDependencies": {
        "bulma": "^0.6.2",
        "bulma-extensions": "^1.0.1",
        "devtron": "^1.4.0",
        "electron": "^1.8.2",
        "electron-builder": "^19.54.0"
    }
}
